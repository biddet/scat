#!/bin/sh

URL=$1
KEY=$2

mysql -B scat -e "SELECT retail_price, discount_type, discount, (SELECT SUM(allocated) FROM txn_line WHERE item_id = item.id) stock, code, minimum_quantity, purchase_quantity FROM item WHERE active AND NOT deleted" | grep -av 'Using a password' > /tmp/prices-$$.txt

curl -s -F "key=$KEY" -F "prices=@/tmp/prices-$$.txt" $URL | grep -v Loaded

rm /tmp/prices-$$.txt
