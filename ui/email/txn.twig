{% import 'macros.twig' as scat %}
<div class="panel panel-default">
  <div class="panel-heading">
    <p>
      <small>
        Created: {{ txn.created }}
      </small>
    </p>
    <p>
      <i class="fa fa-user-o fa-border"></i>
      {{ txn.owner.name }}
      &lt;{{ txn.owner.email }}&gt;
    </p>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>Quantity</th>
        <th>Code</th>
        <th>Name</th>
        <th class="text-right">Price</th>
        <th class="text-right">Ext</th>
      </tr>
    </thead>
    <tbody>
      {% for data in txn.items %}
        <tr valign="top">
          <td></td>
          <td>{{ txn.type == 'vendor' ? data.ordered : -data.ordered }}</td>
          <td><small>{{ data.code }}</small></td>
          <td>
            <span>{{ data.name }}</span>
            <div class="small">{{ data.pricing_detail }}</div>
          </td>
          <td class="text-right">{{ scat.amount(data.sale_price) }}</td>
          <td class="text-right">
            {{ scat.amount(data.sale_price * (txn.type == 'vendor' ? data.ordered : -data.ordered)) }}
          </td>
        </tr>
      {% endfor %}
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">
        </th>
        <th colspan="2" class="text-right">Subtotal:</th>
        <td class="text-right">{{ scat.amount(txn.subtotal) }}</td>
      </tr>
      <tr>
        <th colspan="5" class="text-right">
          Tax:
        </th>
        <td class="text-right" id="tax">
          {{ scat.amount(txn.tax) }}
        </td>
      </tr>
      <tr>
        <th colspan="5" class="text-right">Total:</th>
        <td class="text-right" id="total">
          {{ scat.amount(txn.total) }}
        </td>
      </tr>
      {% for data in txn.payments %}
        <tr>
          <th colspan="5" class="text-right">
            {% if data.method == 'credit' %}
              Paid by {{ data.data.cc_brand }}
              ending in {{ data.data.cc_last4 }}
            {% endif %}
            {% if data.method == 'paypal' %}
              Paid by PayPal
            {% endif %}
            {% if data.method == 'amazon' %}
              Paid with Amazon Pay
            {% endif %}
            {% if data.method == 'gift' %}
              Paid with Gift Card 
            {% endif %}
            {% if data.method == 'other' %}
              Paid
            {% endif %}
            ({{ data.processed }}):
          </th>
          <td colspan="5" class="text-right">{{ scat.amount(data.amount) }}</td>
        </tr>
      {% endfor %}
      <tr>
        <th colspan="5" class="text-right">Due:</th>
        <td class="text-right">{{ scat.amount(txn.due) }}</td>
      </tr>
    </tfoot>
  </table>
</div>
